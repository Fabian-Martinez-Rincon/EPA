programa prueba
areas 
  ciudad: AreaC(1,1,100,100)
robots
  robot robot1
  variables
    x: numero
    y: numero
  comenzar
    x:=0
    derecha
    repetir 99
      repetir 99
        si ~((HayFlorEnLaEsquina)|(HayPapelEnLaEsquina))
          x:=x+1
        mover
      si~((HayFlorEnLaEsquina)(HayPapelEnLaEsquina))
        x:=x+1
      Pos(1,PosCa+1)
    si~((HayFlorEnLaEsquina)|(HayPapelEnLaEsquina))
      x:=x+1
    Informar(x)
  fin
variables
  robin:robot1
comenzar
  AsignarArea(robin,ciudad)
  Iniciar(robin,1,1)
fin