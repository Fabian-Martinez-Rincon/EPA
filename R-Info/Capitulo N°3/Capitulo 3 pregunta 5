programa prueba
areas 
  ciudad: AreaC(1,1,100,100)
robots
  robot robot1
  variables
    x: numero
    y: numero
  comenzar
    Pos(1,7)
    x:=0
    derecha
    mientras(PosAv<100)
      si(x<20)
        si(HayFlorEnLaEsquina)
          tomarFlor
          x:=x+1
        mover
    Informar(x)
  fin
variables
  robin:robot1
comenzar
  AsignarArea(robin,ciudad)
  Iniciar(robin,1,1)
fin