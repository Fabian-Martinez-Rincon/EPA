programa prueba
procesos
  proceso rectangulo(E base:numero;E altura:numero)
  comenzar
    repetir 2
      repetir altura
        mover
      derecha
      repetir base
        mover
      derecha
  fin
  proceso escalon(E entrada1:numero;E entrada2:numero)
  comenzar
    repetir entrada1
      mover
      derecha
    repetir entrada2
      mover
    repetir 3
      derecha
  fin
areas 
  ciudad: AreaC(1,1,100,100)
robots
  robot robot1
  variables
    ancho:numero
    largo:numero
  comenzar
    largo:=2
    repetir 5
      escalon(1,largo)
      largo:=largo + 1
  fin
variables
  robin:robot1
comenzar
  AsignarArea(robin,ciudad)
  Iniciar(robin,1,1)
fin