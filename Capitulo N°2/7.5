programa prueba
procesos
  proceso SumarFloresEsquina(ES flores:numero)
  variables
    aux:numero
  comenzar
    aux:=0
    mientras HayFlorEnLaEsquina
      aux:=aux + 1
      tomarFlor
      flores:=flores + 1
    repetir aux
      depositarFlor
  fin
  proceso RecorrerCalle(ES totalFlores:numero)
  comenzar
    totalFlores:=0
    repetir 99
      SumarFloresEsquina(totalFlores)
      mover
    SumarFloresEsquina(totalFlores)
  fin
  
areas 
